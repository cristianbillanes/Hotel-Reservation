<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    android:background="@color/purple_200">
    <TextView
        android:id="@+id/Name"
        android:text="Room Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/Name_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Name"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/ID"
        android:text="Room Number: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Name"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/ID_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Name"
        android:layout_toRightOf="@+id/ID"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Price"
        android:text="Price: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Name"
        android:layout_toLeftOf="@+id/Price_Show"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Price_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Name"
        android:layout_marginEnd="50dp"
        android:layout_alignParentRight="true"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Detail"
        android:text="Detail: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ID"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Detail_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ID"
        android:layout_toRightOf="@+id/Detail"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Space"
        android:text="Space: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Price"
        android:layout_toLeftOf="@+id/Space_Show"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Space_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Price"
        android:layout_marginEnd="50dp"
        android:layout_alignParentRight="true"
        android:textSize="20dp"/>

</RelativeLayout>