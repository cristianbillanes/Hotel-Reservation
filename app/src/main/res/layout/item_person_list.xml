<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    android:background="@color/purple_200">
    <TextView
        android:id="@+id/Person_name_Text"
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/Person_Name_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Person_name_Text"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/Address_Text"
        android:text="Address: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Person_name_Text"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Address_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Person_name_Text"
        android:layout_toRightOf="@+id/Address_Text"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Contact_Text"
        android:text="Contact: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Address_Text"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/Contact_Show"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Address_Text"
        android:layout_toRightOf="@+id/Contact_Text"
        android:textSize="20dp"/>

</RelativeLayout>